<% provide :title, t("subjects.subject") %>

<% if @course.nil? %>
  <%= t "subjects.coming_soon" %>
<% else %> 
  <div class="row course_header">
    <div class="col-lg-12">
      <h1 class="page-header title">
        <%= @course.name %>
      </h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3 ">
      <div class="list-group">
        <a href="#" class="list-group-item active"><%= t "subjects.subject" %></a>
        <div class="list-group">
          <% @user_course.user_subjects.each do |user_subject| %>
            <%= link_to user_subject.subject.name,
              user_course_user_subject_path(@user_course, user_subject),
              class: "list-group-item subject_member" %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-6 col_task">
      <div class="col-md-12">
        <%= @course.description %>
      </div>
    </div>

    <div class="col-md-3 col_activity">
      <ul class="nav nav-tabs">
        <li class="active">
          <a data-toggle="tab" href="#show_activity"><%= t "activity.activities" %></a>
        </li>
        <li>
          <a data-toggle="tab" href="#show_member"><%= t "member" %></a>
        </li>
      </ul>
      <div class="tab-content">
        <div id="show_activity" class="tab-pane fade in active">
          <%= render "shared/activities", activities: @activities %>
        </div>
        <div id="show_member" class="tab-pane fade">
          <% @course.users.each do |user| %>
            <div id="infor_member">
              <%= image_tag "profile.png" %>
              <%= link_to user.name, user_path(user) %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
