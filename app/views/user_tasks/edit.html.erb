<div class="title"><%= @user_task.task.name %></div>
<%= render "shared/trainee_course_tab", active_tab: Settings.tabs.subjects  %>

<%= form_for @user_task do |f| %>
  <div class="row">
    <%= render "shared/error_messages", object: @user_task %>
    <div class="col-md-6">
      <%= f.label :estimated_time %>
      <%= f.text_field :estimated_time, class: "form-control",
        required: true %>

      <%= f.label :spent_time %>
      <%= f.text_field :spent_time, class: "form-control" %>

      <%= f.label :redmine_task_id %>
      <%= f.text_field :redmine_task_id, class: "form-control",
        required: true %>

      <%= f.label :progress %>
      <%= f.number_field :progress, min: 0, max: 100, class: "form-control" %>

      <%= f.label :status %>
      <div class: "form-control">
        <%= f.select :status, options_for_select(Settings.tasks.statuses,
          selected: f.object.status), {}, class: "form-control" %>
      </div>
    </div>
  </div>
  <br>
  <%= f.submit t("tasks.update"), class: "btn btn-primary" %>
<% end %>
