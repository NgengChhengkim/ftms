<div class="row">
  <div class="col-md-2">
    <%= user_task.name %>
  </div>
  <div class="col-md-3">
    <div class="progress">
      <div class="progress-bar" role="progressbar"%>%">
        <%= user_task.progress %>%
      </div>
    </div>
  </div>
  <div class="col-md-2">
    <%= t "subjects.status" %>&nbsp;
    <span class="text-danger">
      <i><%= t "tasks.statuses.#{Settings.tasks.statuses.key(user_task.status)}" %></i>
    </span>
  </div>
  <div class="col-md-5">
    <%= form_for user_task.task, url: course_task_path(@course.id,user_task.
      task.id), html: {method: :put} do |f| %>
      <% if user_task.has_group_subject? %>
        <div class="col-md-4">
          <%= f.label :assigned_trainee_id, I18n.t("subjects.task.assignee") %>
        </div>
        <div class="col-md-4">
          <%= f.collection_select :assigned_trainee_id, user_task.
            group_subject, :id, :name, {prompt: "", selected: user_task.user_id
              }, {class: "form-control"} %>
        </div>
        <div class="col-md-4">
          <%= f.submit t("tasks.submit"), class: "btn btn-success" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
