<li id="message-<%= message.id %>">
  <div class="media">
    <div class="media-left pull-left">
      <%= link_to avatar_user_tag(message.user, "img-circle", Settings.image_size_30),
        message.user %>
    </div>
    <div class="media-body">
      <div class="media-heading">
        <span><strong><%= link_to message.user_name, message.user %></strong></span>
        <span class="pull-right">
          <small><%= l message.created_at, format: :default %></small>
        </span>
      </div>
      <div class="chat-content">
        <%= message.content %>
      </div>
      <% if message.owner? current_user.id %>
        <span class="message-option pull-right">
          <small>
            <%= link_to message, method: :delete,
              data: {confirm: t("messages.delete.confirm")}, remote: true do %>
              <i class="glyphicon glyphicon-trash"></i>&nbsp;
              <%= t "button.delete" %>
            <% end %>
          </small>
        </span>
      <% end %>
    </div>
  </div>
</li>
