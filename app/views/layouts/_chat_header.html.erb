<div id="chat-header">
  <header class="main-header">
    <a href="/" class="logo-chat">
    <span class="logo-lg"><%= t :name_system %></span></a>
    <nav class="navbar-chat navbar-static-top" role="navigation">
      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= avatar_user_tag current_user, "user-image", Settings.image_size_50 %>
              <span class="hidden-xs"><%= current_user.name %></span>
            </a>
            <ul class="dropdown-menu">
              <li class="user-header">
                <%= avatar_user_tag current_user, "img-circle", Settings.image_size_50 %>
                <p><%= current_user.name %></p>
              </li>
              <li class="user-footer">
                <div class="pull-left">
                  <%= link_to t("staticpages.profile"), admin_user_path(current_user),
                    class: "btn btn-default btn-flat" %>
                </div>
                <div class="pull-right">
                  <%= link_to t("staticpages.logout"), destroy_user_session_path,
                    method: :delete, class: "btn btn-default btn-flat" %>
                </div>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </nav>
  </header>

  <aside class="main-sidebar-chat">
    <section class="sidebar" id="chat-sidebar">
      <ul class="sidebar-menu">
        <%= render partial: "shared/chat_room", collection: @courses, as: :chat_room %>
        <div id="users">
          <%= render partial: "shared/chat_room", collection: @users, as: :chat_room %>
        </div>
        <div id="infinite-scrolling">
          <div class="loading" hidden>
            <i class="fa fa-spinner fa-pulse fa-2x fa-fw"></i>
            <span class="sr-only"><%= t "chats.loading" %></span>
          </div>
          <div hidden><%= paginate @users %></div>
        </div>
      </ul>
    </section>
  </aside>
</div>
