<div id="admin-header">
  <header class="main-header">
    <a href="/" class="logo">
    <span class="logo-lg"><%= t :name_system %></span></a>
    <nav class="navbar navbar-static-top" role="navigation">
      <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      </a>
      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <li>
            <div class="flag-language">
              <% Settings.languages.each do |_, val| %>
                <%= link_to params.merge(locale: val) do %>
                  <%= image_tag val, size: Settings.flag_size %>
                <% end %>
              <% end %>
            </div>
          </li>
          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= avatar_user_tag current_user, "user-image", Settings.image_size_50 %>
              <span class="hidden-xs"><%= current_user.name %></span>
            </a>
            <ul class="dropdown-menu">
              <li class="user-header">
                <%= avatar_user_tag current_user, "img-circle", Settings.image_size_50 %>
                <p><%= current_user.name %></p>
              </li>
              <li class="user-footer">
                <div class="pull-left">
                  <%= link_to t("staticpages.profile"), user_path(current_user), class: "btn btn-default btn-flat" %>
                </div>
                <div class="pull-right">
                  <%= link_to t("staticpages.logout"), destroy_user_session_path,
                    method: :delete, class: "btn btn-default btn-flat" %>
                </div>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </nav>
  </header>

  <aside class="main-sidebar">
    <section class="sidebar">
      <div class="user-panel">
        <div class="pull-left">
          <%= avatar_user_tag current_user, "img-circle", Settings.image_size_50 %>
        </div>
        <div class="pull-left info">
          <p><%= current_user.name %></p>
          <a href="#"><i class="fa fa-circle text-success"></i><%= t :online %></a>
        </div>
      </div>
      <ul class="sidebar-menu">
        <li>
          <%= link_to admin_courses_path do %>
            <i class="fa fa-calendar"></i><span><%= t "layouts.courses" %></span>
          <% end %>
        </li>
        <li>
          <%= link_to admin_subjects_path do %>
            <i class="fa fa-laptop"></i><span><%= t "layouts.subjects" %></span>
          <% end %>
        </li>
        <li>
          <%= link_to admin_reports_path do %>
            <i class="fa fa-file-text-o"></i><span><%= t "layouts.daily_report" %></span>
          <% end %>
        </li>
        <li>
          <%= link_to admin_roles_path do %>
            <i class="fa fa-table"></i><span><%= t "layouts.roles" %></span>
          <% end %>
        </li>
        <li id="evaluations-header" class="treeview">
          <a href="#">
            <i class="fa fa-book"></i><span><%= t "layouts.evaluations" %></span>
            <i class="fa fa-angle-left pull-right"></i>
          </a>
          <ul class="treeview-menu">
            <li>
              <%= link_to admin_evaluations_path do %>
                <i class="fa fa-circle-o"></i>
                <%= t "layouts.evaluations" %>
              <% end %>
            </li>
          </ul>
          <ul class="treeview-menu">
            <li>
              <%= link_to admin_evaluation_templates_path do %>
                <i class="fa fa-circle-o"></i>
                <%= t "layouts.evaluation_templates" %>
              <% end %>
            </li>
          </ul>
          <ul class="treeview-menu">
            <li>
              <%= link_to admin_ranks_path do %>
                <i class="fa fa-circle-o"></i>
                <%= t "layouts.ranks" %>
              <% end %>
            </li>
          </ul>
        </li>
        <li id="user-profiles-header" class="treeview">
          <a href="#">
            <i class="fa fa-book"></i><span><%= t "layouts.user_profiles" %></span>
            <i class="fa fa-angle-left pull-right"></i>
          </a>
          <ul class="treeview-menu">
            <li>
              <%= link_to admin_profiles_path do %>
                <i class="fa fa-circle-o"></i>
                <%= t "layouts.user_profiles" %>
              <% end %>
            </li>
          </ul>
          <ul class="treeview-menu">
            <li>
              <%= link_to admin_universities_path do %>
                <i class="fa fa-circle-o"></i>
                <%= t "layouts.universities" %>
              <% end %>
            </li>
          </ul>
          <ul class="treeview-menu">
            <li>
              <%= link_to admin_statuses_path do %>
                <i class="fa fa-circle-o"></i>
                <%= t "layouts.statuses" %>
              <% end %>
            </li>
          </ul>
          <ul class="treeview-menu">
            <li>
              <%= link_to admin_user_types_path do %>
                <i class="fa fa-circle-o"></i>
                <%= t "layouts.user_types" %>
              <% end %>
            </li>
          </ul>
          <ul class="treeview-menu">
            <li>
              <%= link_to admin_user_progresses_path do %>
                <i class="fa fa-circle-o"></i>
                <%= t "layouts.user_progresses" %>
              <% end %>
            </li>
          </ul>
          <ul class="treeview-menu">
            <li>
              <%= link_to admin_users_path do %>
                <i class="fa fa-circle-o"></i>
                <%= t "layouts.users" %>
              <% end %>
            </li>
          </ul>
        </li>
      </ul>
    </section>
  </aside>
</div>
