<div id="admin-header">
  <header class="main-header">
    <a href="/" class="logo">
    <span class="logo-lg"><%= t :name_system %></span></a>
    <nav class="navbar navbar-static-top" role="navigation">
      <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      </a>
      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <li>
            <div class="flag-language">
              <% Settings.languages.each do |_, val| %>
                <%= link_to params.merge(locale: val) do %>
                  <%= image_tag val, size: Settings.flag_size %>
                <% end %>
              <% end %>
            </div>
          </li>
          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= avatar_user_tag current_user, "user-image", Settings.image_user_size %>
              <span class="hidden-xs"><%= current_user.name %></span>
            </a>
            <ul class="dropdown-menu">
              <li class="user-header">
                <%= avatar_user_tag current_user, "img-circle", Settings.image_user_size %>
                <p><%= current_user.name %></p>
              </li>
              <li class="user-footer">
                <div class="pull-left">
                  <%= link_to t("staticpages.profile"), user_path(current_user), class: "btn btn-default btn-flat" %>
                </div>
                <div class="pull-right">
                  <%= link_to t("staticpages.logout"), destroy_user_session_path,
                    method: :delete, class: "btn btn-default btn-flat" %>
                </div>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </nav>
  </header>

  <aside class="main-sidebar">
    <section class="sidebar">
      <div class="user-panel">
        <div class="pull-left image">
          <%= avatar_user_tag current_user, "img-circle", Settings.image_user_size %>
        </div>
        <div class="pull-left info">
          <p><%= current_user.name %></p>
          <a href="#"><i class="fa fa-circle text-success"></i><%= t :online %></a>
        </div>
      </div>
      <ul class="sidebar-menu">
        <li>
          <a href="/admin/courses">
            <i class="fa fa-calendar"></i><span><%= t "layouts.courses" %></span>
          </a>
        </li>
        <li>
          <a href="/admin/subjects">
            <i class="fa fa-laptop"></i><span><%= t "layouts.subjects" %></span>
          </a>
        </li>
        <li >
          <a href="/admin/roles">
            <i class="fa fa-table"></i><span><%= t "layouts.roles" %></span>
          </a>
        </li>
        <li id="evaluations-header" class="treeview">
          <a href="#">
            <i class="fa fa-book"></i><span><%= t "layouts.evaluations" %></span>
            <i class="fa fa-angle-left pull-right"></i>
          </a>
          <ul class="treeview-menu">
            <li><a href="/admin/evaluations"><i class="fa fa-circle-o"></i>
              <%= t "layouts.evaluations" %></a></li>
          </ul>
          <ul class="treeview-menu">
            <li><a href="/admin/evaluation_templates"><i class="fa fa-circle-o">
              </i><%= t "layouts.evaluation_templates" %></a></li>
          </ul>
          <ul class="treeview-menu">
            <li><a href="/admin/ranks"><i class="fa fa-circle-o"></i><%= t "layouts.ranks" %></a></li>
          </ul>
        </li>
        <li id="user-profiles-header" class="treeview">
          <a href="#">
            <i class="fa fa-book"></i><span><%= t "layouts.user_profiles" %></span>
            <i class="fa fa-angle-left pull-right"></i>
          </a>
          <ul class="treeview-menu">
            <li><a href="/admin/profiles"><i class="fa fa-circle-o"></i>
              <%= t "layouts.user_profiles" %></a></li>
          </ul>
          <ul class="treeview-menu">
            <li><a href="/admin/universities"><i class="fa fa-circle-o"></i>
              <%= t "layouts.universities" %></a></li>
          </ul>
          <ul class="treeview-menu">
            <li><a href="/admin/statuses"><i class="fa fa-circle-o"></i>
              <%= t "layouts.statuses" %></a></li>
          </ul>
          <ul class="treeview-menu">
            <li><a href="/admin/user_types"><i class="fa fa-circle-o"></i>
              <%= t "layouts.user_types" %></a></li>
          </ul>
          <ul class="treeview-menu">
            <li><a href="/admin/user_progresses"><i class="fa fa-circle-o"></i>
              <%= t "layouts.user_progresses" %></a></li>
          </ul>
          <ul class="treeview-menu">
            <li><a href="/admin/users"><i class="fa fa-circle-o"></i>
              <%= t "layouts.users" %></a></li>
          </ul>
        </li>
      </ul>
    </section>
  </aside>
</div>
