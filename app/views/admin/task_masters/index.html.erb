<div id="tasks">
  <div class="title">
    <%= t "subjects.label.task" %>
  </div>
  <table class="table table-striped tbl-task">
    <thead>
      <tr>
        <th class="name"><%= t "tasks.fields.name" %></th>
        <th class="avatar"><%= t "tasks.fields.image" %></th>
        <th class="description"><%= t "tasks.fields.description" %></th>
        <th class="content"><%= t "tasks.fields.content" %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @task_masters %>
    </tbody>
  </table>
</div>
