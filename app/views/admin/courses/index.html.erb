<div id="courses">
  <div id="admin-courses">
    <div class="row">
      <div class="col-md-12 title">
        <%= t "layouts.courses" %>
        <span>
          <%= link_to t("courses.buttons.admin.new"),
            new_admin_course_path, class: "btn btn-success pull-right" %>
        </span>
      </div>
    </div>
    <% unless @courses.nil? %>
      <table id="course-tbl" class="table table-bordered display" data-source="<%= admin_courses_url format: "json" %>" >
        <thead>
          <tr class="active">
            <th></th>
            <th><%= t "courses.table.name" %></th>
            <th><%= t "courses.table.trainers" %></th>
            <th><%= t "courses.table.trainees" %></th>
            <th><%= t "courses.table.status" %></th>
          </tr>
        </thead>
        <tbody>
        </tbody>
        <tfoot hidden>
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td><%= t "courses.table.all_status" %></td>
          </tr>
        </tfoot>
      </table>
    <% end %>
  </div>
</div>

