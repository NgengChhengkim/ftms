<table class="table table-striped tbl-note">
  <thead>
    <th><%= t "notes.table.index" %></th>
    <th><%= t "notes.table.note_name" %></th>
    <th><%= t "notes.table.created_at" %></th>
    <th><%= t "notes.table.updated_at" %></th>
    <th><%= t "notes.table.action" %></th>
  </thead>
  <tbody>
    <% @notes.each_with_index do |note, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= note.name %></td>
        <td><%= note.created_at %></td>
        <td><%= note.updated_at %></td>
        <td class="action">
          <%= link_to t("button.edit"), edit_admin_user_note_path(@user, note) %> &nbsp;
          <%= link_to t("button.delete"), admin_user_note_path(@user, note),
            method: :delete, data: {confirm: t("messages.delete.confirm")} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
