  </td>
  <td class="description"><%= subject.description %></td>
  <td class="during_time"><%= subject.during_time %></td>
  <td class="action">
    <%= link_to t("subjects.buttons.admin.edit"), edit_admin_subject_path(subject) %>&nbsp;
