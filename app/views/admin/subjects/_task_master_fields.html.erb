<div class="row form-new-tasks">
  <div class="col-md-9">
    <div class="row">
      <div class="col-md-2 text-right">
        <span><%= t "tasks.fields.name" %>:</span>
      </div>
      <div class="col-md-10">
        <%= f.text_field :name, class: "form-control",
          placeholder: I18n.t("tasks.form.input_task_name") %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-2 text-right">
        <span><%= t "tasks.avatar" %>:</span>
      </div>
      <div class="col-md-10">
        <%= f.file_field :avatar, class: "form-control" %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-2 text-right">
        <span><%= t "tasks.description" %>:</span>
      </div>
      <div class="col-md-10">
        <%= f.text_area :description, class: "form-control",
          placeholder: I18n.t("tasks.form.input_task_description") %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-2 text-right">
        <span><%= t "tasks.content" %></span>
      </div>
      <div class="col-md-10">
        <%= f.cktext_area :content, class: "ckeditor form-control",
          rows: 10 %>
      </div>
    </div>
    <br>
  </div>
  <div class="col-md-1 remove-field">
    <%= link_to_remove_fields t("subjects.dynamic_form.remove"), f %>
  </div>
</div>
<br>
