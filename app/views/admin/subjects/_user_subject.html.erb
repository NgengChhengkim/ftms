<div class="user-list">
  <span><h3><%= user_subject.user.name %></h3></span>
  <% if @course.progress? %>
    <span class="pull-right">
      <% if user_subject.init? %>
        <div><%= link_to t("admin.actions.show_subject.start"),
          admin_course_subject_user_subject_path(@course_subject, user_subject),
          method: :patch, remote: true, class: "btn btn-primary" %></div>
      <% elsif user_subject.progress? %>
        <span class="status inprogress">
          <%= user_subject.status %>
        </span>
        <span><%= link_to t("admin.actions.show_subject.finish"),
          admin_course_subject_user_subject_path(@course_subject, user_subject),
          method: :patch, remote: true, class: "btn btn-success" %></span>
      <% else %>
        <div class="status finish">
          <%= user_subject.status %>
        </div>
      <% end %>
    </span>
  <% end %>
  <div class="user_tasks">
    <%= render user_subject.user_tasks %>
  </div>
</div>
