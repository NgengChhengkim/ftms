<%= render "shared/course_course_master_tab", active_tab: Settings.tabs.course_master %>

<% provide :title, t("courses.course_masters") %>
<div id="courses">
  <% if @course_master.nil? %>
    <div class="title">
      <h2><%= t "courses.no_course" %></h2>
    </div>
  <% else %>
    <h1 class="title"><%= @course_master.name %></h1>
    <table class="table table-striped tbl-course">
      <thead>
        <tr>
          <th class="name"><%= t "courses.table.name" %></th>
          <th class="start-date"><%= t "courses.start_date" %></th>
          <th class="end-date"><%= t "courses.end_date" %></th>
          <th class="action"><%= t "courses.table.action" %></th>
        </tr>
      </thead>
      <% @courses.each do |course| %>
        <tr>
          <td class="name"><%= link_to course.name, admin_course_path(course) %></td>
          <td class="start-date"><%= course.start_date %></td>
          <td class="end-date"><%= course.end_date %></td>
          <td class="action"><%= link_to t("button.edit"),
            edit_admin_course_path(course) %> &nbsp;
            <%= link_to t("button.delete"), admin_course_path(course),
              method: :delete, data: {confirm: t("messages.delete.confirm")} %>
          </td>
        </tr>
      <% end %>
    </table>
  <% end %>
</div>
