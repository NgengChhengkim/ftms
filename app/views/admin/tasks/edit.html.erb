<div class="row">
  <div class="row subject-breadcrumb">
    <ol class="breadcrumb">
      <li>
        <%= link_to t("courses.breadcum.home"), root_url %>
      </li>
      <li>
        <%= link_to t("courses.breadcum.courses"), admin_courses_path %>
      </li>
      <li>
        <%= link_to @course.name, admin_course_path(@course) %>
      </li>
      <li><%= link_to @course_subject.subject_name,
        admin_course_subject_path(@course, @course_subject.subject) %></li>
      <li><%= link_to @task.name,
        admin_course_subject_user_task_path(@course_subject,
        @task.user_tasks.first) %></li>
      <li class="active"><%= t "button.edit" %></li>
    </ol>
  </div>
</div>
<div class="form-edit-task">
  <%= form_for :task, url: admin_course_subject_task_path(
    @course_subject, @task), html: {method: :patch}  do |f|%>
      <%= render "shared/error_messages", object: @task %>
      <div class="form-group">
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.file_field :image, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_area :description, class: "form-control modal-text-area",
          required: true, placeholder: t("tasks.form.input_task_description") %>
      </div>
      <div class="form-group">
        <%= f.cktext_area :content, class: "ckeditor form-control",
          required: true, rows: 10 %>
      </div>
      <div class="form-group">
        <%= f.submit t("button.update"),
          class: "btn btn--b btn--block" %>
      </div>
  <% end %>
</div>
