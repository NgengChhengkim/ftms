<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="label box-title"><%= t "subjects.members" %></h3>
  </div>
  <div class="box-body no-padding">
    <ul class="user-list clearfix">
      <%= render partial: "shared/member", collection: @trainees_show, as: :user %>
      <li class="plus-node">
        <% if @count_member > 0 %>
          <%= link_to "+#{@count_member}", "#", data: {toggle: "modal", target: "#member-modal"},
            title: t("subjects.modal.member_details") %>
        <% else %>
          <%= link_to "#", data: {toggle: "modal", target: "#member-modal"},
            title: t("subjects.modal.member_details") do %>
            <i class="fa fa-users" aria-hidden="true"></i>
          <% end %>
        <% end %>
      </li>
    </ul>
  </div>
</div>

<div class="card">
  <div id="image-course">
    <%= set_image @user_subject, Settings.image_size_200 %>
  </div><br>
  <div class="task-infor">
    <p><%= t "subjects.tasks.new_tasks" %><span class="status">
      <%= @number_of_task_new %>/<%= @number_of_task %></span></p>
    <p><%= t "subjects.tasks.in_progress_tasks" %><span class="status">
      <%= @number_of_task_in_progress %>/<%= @number_of_task %></span></p>
    <p><%= t "subjects.tasks.resolved_tasks" %><span class="status">
      <%= @number_of_task_resolved %>/<%= @number_of_task %></span></p>
    <p><%= t "subjects.tasks.closed_tasks" %><span class="status">
      <%= @number_of_task_closed %>/<%= @number_of_task %></span></p>
  </div>
</div>

<div class="sector-content">
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="label box-title"><%= t "subjects.note" %></h3>
    </div>
    <div class="box-body">
      <div class="subject-note">
        <p><%= t "subjects.note_during_time", during_time: @subject.during_time %></p>
      </div>
    </div>
  </div>
</div>
<%= render partial: "shared/documents", locals: {documents: @subject.documents} %>
