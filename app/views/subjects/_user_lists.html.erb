<div class="row">
  <h3><%= t "subjects.create_new_task" %></h3>
  <%= form_for :task, url: course_tasks_path(@course.id,
    @course_subject.id), html: {method: :post}  do |f| %>
    <%= render "shared/error_messages", object: @subject %>
    <div class="col-md-3">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>
    <div class="col-md-3">
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>
    </div>
    <div class="col-md-3">
      <%= f.label :assigned_trainee_id, I18n.t("assignee") %>
      <%= f.collection_select :assigned_trainee_id, @users, :id, :name,
        {prompt: ""}, {class: "form-control"} %>
    </div>
    <%= f.hidden_field :course_subject_id, value: @course_subject.id %>
    <div class="col-md-3">
      <%= f.submit t("subjects.submit.create_task"), class: "btn btn-success"
        %>
    </div>
  <% end %>
</div>
<h3><%= t "subject.labels.user_lists" %></h3>
<%= render partial: "subjects/user_subject", collection: @user_subjects %>
<hr>
<% if @course.progress? %>
  <%= link_to t("subjects.task.finish_all"), "#", class:
    "btn btn-success pull-right" %>
<% end %>
