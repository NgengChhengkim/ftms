<div id="user-subject" class="row">
  <div class="col-md-10">
    <h2><b class="text-success"><%= @subject.name %></b></h2>
    <p><i><%= @subject.description %></i></p>
    <h3><%= t "tasks.task_not_assign" %></h3>
    <div class="task-had-not-assign">
      <% @unassign_tasks.each do |task| %>
        <div class="row">
          <%= task.name %>
        </div>
      <% end %>
    </div>
    <div class="user-lists">
      <%= render "user_lists" %>
    </div>
  </div>
</div>
