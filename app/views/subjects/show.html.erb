<div id="subject-show">
  <div class="row">
    <div class="cell">
      <div class="grid">
        <div class="grid-box grid-box-6">
          <div class="breadcrumb-bar tac tal--l">
            <ul class="list breadcrumb mts">
              <li>
                <%= link_to root_url do %>
                  <i class="glyphicon glyphicon-th-list"></i>
                  <%= t "layouts.paths" %>
                <% end %>
              </li>
              <li><%= link_to t("layouts.all_courses"), courses_path %></li>
              <li><%= link_to @user_subject.course_name,  user_course_path(@user_subject.user_course) %></li>
              <li class="is-active"><%= @user_subject.subject_name %></li>
            </ul>
          </div>
        </div>
        <div class="grid-box grid-box-4">
          <ul class="grid g--s lr mbm mbf--l">
            <li class="grid-box g-b--m--1of2 mbs mbf--m">
              <%= link_to t("subjects.create_new_task"), "#", class: "btn btn--b btn--block" %>
            </li>
            <li class="grid-box g-b--m--1of2">
              <%= link_to t("subjects.discuss"), "#", class: "btn btn--b btn--block" %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <hr>
  <div class="row has-sector">
    <div class="cell">
      <div class="grid">
        <div class="grid-box grid-box-75">
          <div class="well well--l">
            <div class="mbl">
              <div class="mbl--m">
                <h2 class="label"><%= t "subjects.description" %></h2>
                <p><%= @user_subject.subject_description %></p>
              </div>
              <h2 class="label mbm"><%= t "subjects.task_overview" %></h2>
              <ol class="list list--divided list--divided--m list--divided--f
                list--divided--open mlm--l">
                <% @user_tasks.each do |user_task| %>
                  <hr />
                  <li class="list-item mbm pbm por" id="course-overview">
                    <div class="bucket bucket--flag">
                      <div class="bucket-media dn db--m">
                        <div class="badge">
                          <%= image_task_tag user_task %>
                        </div>
                      </div>
                      <div class="bucket-content">
                        <h3 class="h h--3">
                          <b class="h-label opf">
                            <span class="prs <%= style_of_status user_task.status %>">
                              <%= t "tasks.statuses.#{Settings.tasks.statuses.key(user_task.status)}" %>
                            </span>
                            <span class="bdrl pls tch"><%= "#{user_task.progress} %" %></span>
                          </b>
                          <%= user_task.task_name %>
                          <h4>
                            <%= link_to t("subjects.task.edit"), "#", class: "db di--m tch tsxs" %>
                            <%= link_to t("subjects.task.delete"), "#", class: "db di--m tch tsxs" %>
                          </h4>
                        </h3>
                        <p class="mbf"><%= user_task.task_description %></p>
                      </div>
                    </div>
                  </li>
                <% end %>
              </ol>
            </div>
          </div>
        </div>
        <div class="grid-box grid-box-25 sector">
          <div class="well well--l">
            <div class="card">
              <div id="image-course">
                <%= user_image_course_subject_tag @user_subject %>
              </div>
              <h3 id="complete"><%= t "subjects.subject_complete" %></h3>
              <h3>0/10(0%)</h3>
            </div>
            <div class="sector-content">
              <%= render partial: "shared/list_member", 
                locals: {trainers: @trainers, trainees: @trainees} %>
              <div class="box box-primary">
                <div class="box-header with-border">
                  <h3 class="label"><%= t "subjects.note" %></h3>
                </div>
                <div class="box-body no-padding">
                  <%= @subject.name %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
