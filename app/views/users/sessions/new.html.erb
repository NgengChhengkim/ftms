<div class="wrapper">
  <div class="form-signin">
    <h2 class="form-signin-heading"><%= t "signins.banner" %></h2>
    <%= form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
      <%= f.email_field :email, placeholder: t("user.fields.email"), class: "form-control" %>
      <%= f.password_field :password, autocomplete: "off",
        placeholder: t("user.fields.password"), class: "form-control" %>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
      <%= f.submit t("user.login"), class: "btn btn-lg btn-primary btn-block" %>
    <% end %>
  </div>
</div>
